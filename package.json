{
  "name": "react-feathers-boilerplate",
  "description": "A React / Redux / Feathers boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
    "feathers",
    "react"
  ],
  "author": {
    "name": "Arthur Chaloin",
    "email": "arthur@achaloin.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "server"
  },
  "engines": {
    "node": "^10.0.0",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "test": "yarn run eslint && NODE_ENV= yarn run mocha",
    "eslint": "eslint server/. test/. client/. --config .eslintrc.json",
    "mocha": "mocha test/ --recursive --exit",
    "start": "NODE_ENV=production node server/",
    "build": "webpack --progress --colors --config config/webpack.prod.js",
    "dev:server": "nodemon --watch server server/",
    "dev:client": "webpack --progress --colors --watch --config config/webpack.dev.js",
    "dev:reload": "browser-sync start --proxy http://$(cat ./config/default.json | jq -r '.host'):$(cat ./config/default.json | jq -r '.port') -f public,server",
    "dev": "yarn dev:client & yarn dev:server & yarn dev:reload"
  },
  "dependencies": {
    "@feathersjs/configuration": "^2.0.4",
    "@feathersjs/errors": "^3.3.4",
    "@feathersjs/express": "^1.2.7",
    "@feathersjs/feathers": "^3.2.3",
    "@feathersjs/socketio": "^3.2.7",
    "@feathersjs/socketio-client": "^1.2.1",
    "antd": "^3.18.2",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "helmet": "^3.15.0",
    "immutability-helper": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-feathers": "^0.1.0",
    "redux-saga": "^1.0.2",
    "redux-saga-wrapper": "^0.0.3",
    "serve-favicon": "^2.5.0",
    "socket.io-client": "^2.2.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining"
    ]
  }
}
